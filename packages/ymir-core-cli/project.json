{
  "name": "ymir-core-cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ymir-core-cli/src",
  "projectType": "library",
  "targets": {
    "destInstall": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm install",
        "cwd": "dist/ymir-core-cli"
      }
    },
    "chmod": {
      "executor": "nx:run-commands",
      "options": {
        "command": "chmod +x ./index.js",
        "cwd": "dist/ymir-core-cli/src/bin"
      },
      "dependsOn": ["destInstall"]
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm install",
        "cwd": "packages/ymir-core-cli"
      }
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/ymir-core-cli",
        "main": "packages/ymir-core-cli/src/index.ts",
        "tsConfig": "packages/ymir-core-cli/tsconfig.lib.json"
      },
      "dependsOn": ["install"]
    },
    "buildFull": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cp -r ./ymir-core-cli/src/lib/config/templates ../dist/ymir-core-cli/src/lib/config/ && cp -r ./ymir-core-cli/README.md ../dist/ymir-core-cli/README.md",
        "cwd": "packages/"
      },
      "dependsOn": ["build"]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npm publish --access public"],
        "cwd": "dist/ymir-core-cli",
        "parallel": false
      },
      "dependsOn": ["buildFull"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ymir-core-cli/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/ymir-core-cli/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
